<div
	class="card bg-slate-500 w-48 h-48 m-4 items-center flex rounded-[50%] relative after:blur-xl">
	<slot />
</div>
<style>
	@property --gradient-angle {
		syntax: "<angle>";
		initial-value: 0deg;
		inherits: false;
	}

	:root {
		--clr-1: #f8d83a;
		--clr-2: #6fb734;
		--clr-3: #346ad5;
		--clr-4: #6fb734;
		--clr-5: #f8d83a;
	}

	.card::before,
	.card::after {
		content: "";
		position: absolute;
		inset: -0.5rem;
		z-index: -1;
		background: conic-gradient(
			from var(--gradient-angle),
			var(--clr-3),
			var(--clr-4),
			var(--clr-5),
			var(--clr-4),
			var(--clr-3)
		);
		border-radius: inherit;
		animation: rotation 8s linear infinite;
	}

	@keyframes rotation {
		0% {
			--gradient-angle: 0deg;
		}
		100% {
			--gradient-angle: 360deg;
		}
	}
</style>
