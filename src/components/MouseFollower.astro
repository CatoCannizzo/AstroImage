---
import { Image } from "astro:assets";
// import img1 from "@/assets/Luke-Miller-img1.jpg";
// import img2 from "@/assets/Nik-img2.jpg";
const img1 = "Luke-Miller-img1.jpg";
---

<div id="MouseFollower" class="relative flex max-w-48 flex-row flex-wrap">
	<img
		id="FollowerImage"
		src={img1}
		alt="a waterfall"
		height="192"
		class="z-10"
	/>
	<div id="iH1" class="imageHolder absolute z-20 h-16 w-16 bg-red-300/25">
	</div>
	<div
		id="iH2"
		class="imageChanger absolute left-16 z-20 h-16 w-16 bg-orange-300/25">
	</div>
	<div
		id="iH3"
		class="imageChanger absolute left-32 z-20 h-16 w-16 bg-yellow-300/25">
	</div>
	<div
		id="iH4"
		class="imageChanger absolute top-16 z-20 h-16 w-16 bg-green-300/25">
	</div>
	<div
		id="iH5"
		class="imageChanger absolute left-16 top-16 z-20 h-16 w-16 bg-blue-300/25">
	</div>
	<div
		id="iH6"
		class="imageChanger absolute left-32 top-16 z-20 h-16 w-16 bg-indigo-300/25">
	</div>
	<div
		id="iH7"
		class="imageChanger absolute top-32 z-20 h-16 w-16 bg-violet-300/25">
	</div>
	<div
		id="iH8"
		class="imageChanger absolute left-16 top-32 z-20 h-16 w-16 bg-slate-300/25">
	</div>
	<div
		id="iH9"
		class="imageChanger absolute left-32 top-32 z-20 h-16 w-16 bg-white/25">
	</div>
</div>

<script>
	const img1 = "Luke-Miller-img1.jpg";
	const img2 = "Nik-img2.jpg";

	function changeImage(imgSrc: string) {
		console.log("This was called");
		const followImage = document.getElementById("FollowerImage");
		if (followImage instanceof HTMLImageElement) {
			followImage.src = imgSrc;
		}
	}
	const iH1Ele = document.getElementById("iH1");
	if (iH1Ele instanceof HTMLDivElement) {
		iH1Ele.addEventListener("mouseover", () => changeImage(img2));
	}
	const iH2Ele = document.getElementById("iH2");
	if (iH2Ele instanceof HTMLDivElement) {
		iH2Ele.addEventListener("mouseover", () => changeImage(img1));
	}
	const iH3Ele = document.getElementById("iH3");
	if (iH3Ele instanceof HTMLDivElement) {
		iH3Ele.addEventListener("mouseover", () => changeImage(img2));
	}
	const iH4Ele = document.getElementById("iH4");
	if (iH4Ele instanceof HTMLDivElement) {
		iH4Ele.addEventListener("mouseover", () => changeImage(img1));
	}
	const iH5Ele = document.getElementById("iH5");
	if (iH5Ele instanceof HTMLDivElement) {
		iH5Ele.addEventListener("mouseover", () => changeImage(img2));
	}
	const iH6Ele = document.getElementById("iH6");
	if (iH6Ele instanceof HTMLDivElement) {
		iH6Ele.addEventListener("mouseover", () => changeImage(img1));
	}
	const iH7Ele = document.getElementById("iH7");
	if (iH7Ele instanceof HTMLDivElement) {
		iH7Ele.addEventListener("mouseover", () => changeImage(img2));
	}
	const iH8Ele = document.getElementById("iH8");
	if (iH8Ele instanceof HTMLDivElement) {
		iH8Ele.addEventListener("mouseover", () => changeImage(img1));
	}
	const iH9Ele = document.getElementById("iH9");
	if (iH9Ele instanceof HTMLDivElement) {
		iH9Ele.addEventListener("mouseover", () => changeImage(img2));
	}
</script>
